<div class="form-group row">
    <div class="col-12 col-md-5 mb-2 mb-md-0">
        <div class="input-group">
            <select id="dashboard-select" class="form-control">
                {% for row in manager.dashboards %}
                    <option value="{{ row.id }}" {{ row.id is same as(manager.resource.id) ? 'selected' : '' }}>{{ row.name }}</option>
                {% endfor %}
            </select>
            <div class="input-group-append">
                {% include "@SpipuDashboard/show/header/configuration.html.twig" with {'manager': manager} %}
            </div>
        </div>
        {% include "@SpipuDashboard/show/header/creation.html.twig" with {'manager': manager} %}
        {% include "@SpipuDashboard/show/header/duplication.html.twig" with {'manager': manager} %}
    </div>
    {% include manager.definition.templateShowFilters with {'manager': manager} %}
</div>